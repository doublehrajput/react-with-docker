{
  "compilerOptions": {
    "jsx": "react-jsx",
    "strictFunctionTypes": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"]
    },
    "moduleResolution": "node",
    "module": "ES6",
    "target": "ES6",
    "lib": ["DOM", "ES5"],
    "checkJs": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "types",
    ]
  },
  "exclude": [
    "./node_modules", 
    "./build", 
    "./public",
    "node_modules",
    "**/node_modules/*"
  ],
  "include": ["./src/**/*", "./types/*.ts"]
}
